<h1>Dashboard do Administrador</h1>

<a href="/admin/product/add">Adicionar Novo Produto</a>

<h2>Produtos</h2>
<table>
    <thead>
        <tr>
            <th>Título</th>
            <th>Preço</th>
            <th>Estoque</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.title}}</td>
            <td>R$ {{this.price}}</td>
            <td>{{this.stock}}</td>
            <td>
                <a href="/admin/product/edit/{{this._id}}">Editar</a>
                <form action="/admin/product/delete/{{this._id}}" method="POST" style="display: inline;">
                    <button type="submit" onclick="return confirm('Tem certeza que deseja excluir este produto?')">Excluir</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<a href="/admin/logout">Logout</a>