<h1>{{#if product}}Editar{{else}}Adicionar{{/if}} Produto</h1>

<form action="{{#if product}}/admin/product/edit/{{product._id}}{{else}}/admin/product/add{{/if}}" method="POST">
    <div>
        <label for="title">Título:</label>
        <input type="text" id="title" name="title" value="{{product.title}}" required>
    </div>
    <div>
        <label for="description">Descrição:</label>
        <textarea id="description" name="description" required>{{product.description}}</textarea>
    </div>
    <div>
        <label for="price">Preço:</label>
        <input type="number" id="price" name="price" step="0.01" value="{{product.price}}" required>
    </div>
    <div>
        <label for="thumbnail">URL da Imagem:</label>
        <input type="text" id="thumbnail" name="thumbnail" value="{{product.thumbnail}}" required>
    </div>
    <div>
        <label for="code">Código:</label>
        <input type="text" id="code" name="code" value="{{product.code}}" required>
    </div>
    <div>
        <label for="stock">Estoque:</label>
        <input type="number" id="stock" name="stock" value="{{product.stock}}" required>
    </div>
    <button type="submit">{{#if product}}Atualizar{{else}}Adicionar{{/if}} Produto</button>
</form>

<a href="/admin/dashboard">Voltar para o Dashboard</a>