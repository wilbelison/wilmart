<h1>Bem-vindo ao Wilmart</h1>

<nav>
    <a href="/admin/login">Área do Administrador</a>
</nav>

<div class="product-list">
    {{#if products.length}}
        {{#each products}}
        <div class="product-card">
            <img src="{{this.thumbnail}}" alt="{{this.title}}">
            <h2>{{this.title}}</h2>
            <p>{{this.description}}</p>
            <p>Preço: R$ {{this.price}}</p>
            <button onclick="addToCart('{{this._id}}')">Adicionar ao Carrinho</button>
        </div>
        {{/each}}
    {{else}}
        <p>Nenhum produto disponível no momento.</p>
    {{/if}}
</div>

